<odoo>
    <record
        model="ir.ui.view"
        id="website_search_blog_bar_res_config_settings_view_form"
    >
        <field name="name">website.search.blog.bar.view.website.form</field>
        <field name="model">website</field>
        <field name="inherit_id" ref="website.view_website_form" />
        <field name="arch" type="xml">
            <div name="other" position="after">
                <group name="search_options" string="Search Bar Options">
                    <group>
                        <field name="blog_search_title" />
                        <field name="blog_search_content" />
                    </group>
                    <group>
                        <field name="blog_search_manual_teaser" />
                    </group>
                </group>
            </div>
        </field>
    </record>
</odoo>
