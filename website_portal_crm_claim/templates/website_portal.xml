<odoo>

<template id="portal_layout"
          name="Claims In Menu"
          inherit_id="website_portal_v10.portal_layout">
    <xpath expr="//ul[contains(@class,'o_portal_submenu')]">
        <li>
            <a href="/my/claims">Claims</a>
        </li>
    </xpath>
</template>

<template id="portal_my_home"
          name="Claims In Portal Home"
          inherit_id="website_portal_v10.portal_my_home">
    <xpath expr="//div[contains(@class,'o_my_home_content')]">
        <h3 class="page-header">
            <a href="/my/claims">Your Claims
                <small class="ml8">
                    <t t-if="crm_claim_count">
                        <span class='badge'><t t-esc="crm_claim_count"/></span>
                    </t>
                    <t t-if="not crm_claim_count">
                        There are currently no claims for your account.
                    </t>
                </small>
            </a>
        </h3>
    </xpath>
</template>

</odoo>
