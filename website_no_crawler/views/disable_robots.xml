<odoo>
    <!-- oca-hooks:disable=xml-dangerous-qweb-replace-low-priority -->
    <template id="robots" inherit_id="website.robots">
        <xpath expr="t" position="replace">
            <t t-translation="off">
                User-agent: *
                <t t-if="disable">Disallow: /</t>
                Sitemap:
                <t t-esc="url_root" />
                sitemap.xml
            </t>
        </xpath>
    </template>
</odoo>
