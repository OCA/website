<odoo>
    <data>
        <record id="website_configuration_add_logo_id" model="ir.ui.view">
            <field name="name">add logo to website configuration</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='content-group']" position="inside">
                    <div class="row">
                        <label class="col-lg-3 o_light_label" for="website_logo"/>
                        <field name="website_logo" widget="image" class="float-left oe_avatar"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>