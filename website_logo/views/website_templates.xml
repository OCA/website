<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="layout_logo_show" inherit_id="website.layout_logo_show">
        <xpath expr="//a//span" position="attributes">
            <attribute name="class" add="hide" separator=" "/>
        </xpath>
        <xpath expr="//a//span" position="after">
            <img src="/website_logo.png" alt="Website logo" title="Website logo"/>
        </xpath>
    </template>

</odoo>
