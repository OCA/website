<odoo>
    <data>
     <template id="add_logo_to_website" inherit_id="website.layout_logo_show" customize_show="True" name="Show Logo">
        <xpath expr="//header//a[hasclass('navbar-brand')]" position="replace">
            <a href="/" class="navbar-brand logo">
                <span t-field="website.website_logo" t-options="{'widget': 'image'}" role="img"
                      t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name"/>
            </a>
        </xpath>
    </template>
    </data>
</odoo>