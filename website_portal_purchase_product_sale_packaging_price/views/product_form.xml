<odoo>

<template id="products_followup"
          inherit_id="website_portal_purchase_product.products_followup">
    <xpath expr="//t[@t-call='website_portal_purchase_product.form_conditions']"
           position="after">
        <t t-call="website_portal_purchase_product_sale_packaging_price.form_packaging_price"/>
    </xpath>
</template>

<template id="form_packaging_price">
    <t t-call="website_portal_purchase_product.form_panel">
        <t t-set="section_title">
            <t>Packaging &amp; Prices</t>
        </t>

        <t t-call="website_portal_purchase_product_sale_packaging_price.packaging_placeholder"/>
    </t>
</template>

<template id="packaging_placeholder">
    <!-- Filled by JavaScript -->
    <div class="js_packaging_placeholder"
         t-att-data-product="product.id"
         t-att-data-currency-position="product.currency_id.position"
         t-att-data-currency-symbol="product.currency_id.symbol"/>

    <div class="row">
        <div class="col-sm-4 col-sm-offset-8">
            <button type="button"
                    class="btn btn-default btn-wide js_packaging_add">
                <div class="fa fa-plus"/>
                <span>
                    <t>
                        Add packaging
                    </t>
                </span>
            </button>
        </div>
    </div>
</template>

</odoo>
