<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="mass_mailing.layout" name="Mass Mailing Layout">
        <t t-call="web.layout">
            <t t-set="head">
                <t t-call-assets="web.assets_common" />
                <t t-call-assets="mass_mailing.assets_backend" />
            </t>
            <body class="o_white_body">
                <header>
                    <div><title>Odoo</title></div>
                    <div class="text-center">
                        <img
                            t-attf-src="/web/binary/company_logo?company={{ res_company.id }}"
                        />
                    </div>
                </header>
                <div id="wrap" class="oe_structure oe_empty" />
                <main>
                    <t t-raw="0" />
                </main>
            </body>
            <xpath expr="//footer" position="replace">
                <div class="container mt16 mb8">
                </div>
            </xpath>
         </t>
     </template>

    <template
        id="unsubscribe_page"
        inherit_id="mass_mailing.unsubscribe"
        priority="101"
    >
        <xpath
            expr="//span[hasclass('o_mass_mailing_unsubscribed')]"
            position="replace"
        >
        </xpath>
    </template>

</odoo>
