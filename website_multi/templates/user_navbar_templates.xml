<odoo>
    <template id="user_navbar" inherit_id="website.user_navbar">
        <xpath expr="//ul[hasclass('o_menu_systray')]/li[1]" position="before">
            <li id="switch-website">
                <a class="btn btn-primary btn-xs dropdown-toggle css_edit_dynamic" data-toggle="dropdown">
                    <span class="current-website"></span>
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                </a>
                <ul class="dropdown-menu" role="menu">
                </ul>
            </li>
        </xpath>
    </template>
</odoo>
