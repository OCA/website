<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Remove "Powered by Odoo" -->
    <template
        id="layout_portal_powered"
        inherit_id="portal.portal_record_sidebar"
        customize_show="True"
        name="Remove Odoo Powered by Link"
        priority="20"
    >
        <xpath expr="//div[hasclass('d-lg-block')]" position="replace">
            <div class="o_brand_promotion" />
        </xpath>
    </template>
</odoo>
