<odoo>
    <template
        id="assets_editor_recaptcha"
        name="Google reCAPTCHA"
        inherit_id="portal.frontend_layout"
    >
        <xpath expr="//main" position="inside">
            <script src="https://www.google.com/recaptcha/api.js" />
        </xpath>
    </template>

    <template id="recaptcha_widget" name="reCAPTCHA widget">
        <div
            class="g-recaptcha"
            t-if="request.env['ir.config_parameter'].sudo().get_param('portal_recaptcha.recaptcha_enabled')"
            t-att-data-sitekey="request.env['ir.config_parameter'].sudo().get_param('portal_recaptcha.recaptcha_key_site')"
        />
    </template>
</odoo>
