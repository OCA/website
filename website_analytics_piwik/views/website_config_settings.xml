<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="google_analytics_setting" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box" id="piwik_analytics_setting">
                    <div class="o_setting_left_pane">
                        <field name="has_piwik_analytics"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="has_piwik_analytics"/>
                        <div class="text-muted">
                            Track visits in Piwik Analytics
                        </div>
                        <div class="content-group" attrs="{'invisible': [('has_piwik_analytics', '=', False)]}">
                            <div class="row mt16">
                                <label class="col-md-3 o_light_label" for="piwik_analytics_id"/>
                                <field name="piwik_analytics_id" />
                            </div>
                        </div>
                        <div attrs="{'invisible': [('has_piwik_analytics', '=', False)]}">
                            <div class="row mt16">
                                <label class="col-md-3 o_light_label" for="piwik_analytics_host"/>
                                <field name="piwik_analytics_host" placeholder="host.name/piwik" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
