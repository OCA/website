<openerp>
<data>

<template id="website_snippet_contact_form"
          inherit_id="website.snippets"
          name="Contact Form">
    <xpath expr="//div[@id='snippet_content']">
        <div>
            <div class="oe_snippet_thumbnail">
                <img src="/website_snippet_contact_form/static/description/icon.png"
                     class="oe_snippet_thumbnail_img"/>
                <span class="oe_snippet_thumbnail_title">
                    Contact Form
                </span>
            </div>

            <form action="/crm/contactus"
                  method="post"
                  class="form-horizontal oe_snippet_body website_snippet_contact_form mt32"
                  enctype="multipart/form-data">

                <div class="text-center">
                    <h2>Contact Form</h2>
                    <h3 class="text-muted">Tell us something!</h3>
                </div>

                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label"
                           for="contact_name">
                        Your Name
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input class="form-control"
                               name="contact_name"
                               required="required"
                               type="text"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="phone">
                        Phone Number
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input class="form-control"
                               name="phone"
                               pattern="(\+|00)[\d\s]+"
                               placeholder="+1 541 754 3010"
                               type="tel"/>
                    </div>
                </div>

                <div name="email_from_container" class="form-group">
                    <label class="col-md-3 col-sm-4 control-label"
                           for="email_from">
                        Email
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input class="form-control"
                               name="email_from"
                               required="required"
                               type="email"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label"
                           for="partner_name">
                        Your Company
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input class="form-control"
                               name="partner_name"
                               required="required"
                               type="text"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="name">
                        Subject
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input class="form-control"
                               name="name"
                               required="required"
                               type="text"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label"
                           for="description">
                        Your Question
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <textarea class="form-control"
                                  name="description"
                                  required="required"></textarea>
                    </div>
                </div>

                <div id="allow_attach" class="form-group">
                    <label class="col-md-3 col-sm-4 control-label"
                           for="filename">
                        File Upload
                    </label>
                    <div class="col-md-7 col-sm-8">
                        <input id="filename" type="file" name="filename" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 col-sm-4 control-label" for="terms"></label>
                    <div class="col-md-7 col-sm-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"
                                       name="privacy_policy"
                                       required="True"/>
                                I have read and accept the
                                <a href="/page/privacy"
                                   target="_blank"
                                   title="Privacy Policy"
                                   >Privacy Policy</a>.
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                        <button class="btn btn-primary btn-lg"
                                type="submit">
                            Send
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </xpath>
    <xpath expr="//div[@id='snippet_options']" position="inside">
        <div data-snippet-option-id='website_snippet_contact_form'
            data-selector=".website_snippet_contact_form"
            data-selector-siblings="p, h1, h2, h3, blockquote, .well, .panel"
            data-selector-children=".content"
           >
            <li class="dropdown-submenu" data-required="true">
                <a tabindex="-1" href="#">Upload file</a>
                <ul class="dropdown-menu">
                    <li data-value=""><a>Not Allow</a></li>
                    <li data-value="allow-attach"><a>Allow</a></li>
                </ul>
            </li>
        </div>
    </xpath>

</template>

</data>
</openerp>
