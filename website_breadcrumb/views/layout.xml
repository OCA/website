<odoo>

    <record id="res_config_settings_breadcrumb_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.breadcrumb.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="webmaster_settings" position="after">
                <h2>Breadcrumbs</h2>
                <div class="row mt16 o_settings_container" id="web_crumb_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="crumb_settings">
                        <div class="o_setting_left_pane">
                            <button type="action" name="%(website.action_website_menu)d"
                                    string="Configure website menus" class="btn-link" icon="fa-arrow-right"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
