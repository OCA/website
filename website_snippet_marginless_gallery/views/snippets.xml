    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']//div[@class='o_panel_body']">
            <t
                t-snippet="website_snippet_marginless_gallery.s_marginless_gallery"
                t-thumbnail="/website_snippet_marginless_gallery/static/description/icon.png"/>
        </xpath>
    </template>

    <template id="snippet_options" inherit_id="website.snippet_options">
        <xpath expr=".">
            <div data-js="marginless_gallery"
                 data-selector=".marginless-gallery">
                <li data-change_images_height="" data-only="click">
                    <a>Change Images Height</a>
                </li>
                <li data-toggle_class="marginless-gallery-contain">
                    <a>Do not trim images</a>
                </li>
            </div>
        </xpath>
    </template>

