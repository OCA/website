<template id="snippet_options" inherit_id="website.snippet_options">
    <xpath expr="//div[@data-snippet-option-id='background']"
           position="attributes">
        <attribute name="data-selector">
            section,
            .carousel,
            .parallax,
            .marginless-gallery .img
        </attribute>
    </xpath>

    <xpath expr=".">
        <div data-snippet-option-id='marginless_gallery'
            data-selector=".marginless-gallery">
            <li>
                <a href="#" class="button js_change_height">
                    Change Images Height
                </a>
            </li>
            <li data-value="marginless-gallery-contain">
                <a>Do not trim images</a>
            </li>
        </div>
    </xpath>

</template>

