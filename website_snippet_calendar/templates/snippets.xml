<odoo>

    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_feature']/div[@class='o_panel_body']" position="inside">
            <t t-snippet="website_snippet_calendar.s_calendar" t-thumbnail="/website_snippet_calendar/static/src/img/snippets/calendar.png"/>
        </xpath>
    </template>

    <template id="s_calendar" name="Calendar">

        <div class="panel panel-default s_calendar s_panel">
            <div class="panel-heading">
                <h3 class="panel-title">Calendar</h3>
            </div>
            <div class="panel-body">
                <div class="calendar"></div>
            </div>
        </div>
    </template>

</odoo>