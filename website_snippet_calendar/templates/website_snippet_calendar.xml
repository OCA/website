<openerp>
    <data>

        <template id="snippets" inherit_id="website.snippets">
            <xpath expr="//div[@id='snippet_feature']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website_snippet_calendar/static/src/img/snippets/calendar.png"/>
                        <span class="oe_snippet_thumbnail_title">Calendar</span>
                    </div>
                    <div class="oe_snippet_body calendar_snippet panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Calendar</h3>
						</div>
						<div class="panel-body"> 
                            <div class="calendar"></div>
						</div>
                    </div>
                </div>
            </xpath>
        </template>    

        <template id="assets_frontend" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">      
                <script type="text/javascript" src="/website_snippet_calendar/static/lib/date/js/date.js"></script>
                <script type="text/javascript" src="/website_snippet_calendar/static/src/js/website_snippet_calendar.js"></script>
                <script type="text/javascript" src="/website_snippet_calendar/static/lib/fullcalendar/js/fullcalendar.js"></script>
            </xpath>
        </template>

        <template id="theme" inherit_id="website.theme">
            <xpath expr="." position="inside">
                <link href="/website_snippet_calendar/static/src/css/website_snippet_calendar.css" type="text/css" rel="stylesheet" />
                <link href="/website_snippet_calendar/static/lib/fullcalendar/css/fullcalendar.css" type="text/css" rel="stylesheet" />
            </xpath>
        </template>

    </data>
</openerp>