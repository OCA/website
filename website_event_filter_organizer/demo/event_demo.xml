        <field name="seats_max">200</field>
        <field name="organizer_id" ref="base.res_partner_2"/>
        <field name="website_published" eval="True"/>
        <field name="description"><![CDATA[
<div class="oe_structure">
    <center><strong>Test 02</strong></center>
</div>
]]>
        </field>
    </record>

</odoo>
