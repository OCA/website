<odoo>
    <record model="ir.rule" id="ir_attachment_model_portal">
        <field name="name">Messages attachment model filtering for portal</field>
        <field name="model_id"    ref="base.model_ir_model"/>
        <field name="global"      eval="True"/>
        <field name="domain_force">[('is_mail_thread', '=', True)]</field>
        <field name="groups"      eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_read"   eval="True"/>
        <field name="perm_write"  eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
