<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <t t-name="website_typed_text.Dialog">
        <div class="container">
            <div class="form-group row">
                <label class="col-form-label col-md-3" for="strings">
                    Texts
                </label>
                <div class="col-md-9">
                    <textarea
                        class="form-control"
                        id="strings"
                        placeholder="Texts... (each new line is one rotation)"
                    >
                        <t t-esc="currentSettings.strings" />
                    </textarea>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3" for="type-speed">
                    Type Speed
                </label>
                <div class="col-md-9">
                    <input
                        type="number"
                        class="form-control"
                        id="type-speed"
                        t-attf-value="#{currentSettings.typeSpeed}"
                    />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3" for="back-speed">
                    Back Speed
                </label>
                <div class="col-md-9">
                    <input
                        type="number"
                        class="form-control"
                        id="back-speed"
                        t-attf-value="#{currentSettings.backSpeed}"
                    />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3" for="back-delay">
                    Back Delay
                </label>
                <div class="col-md-9">
                    <input
                        type="number"
                        class="form-control"
                        id="back-delay"
                        t-attf-value="#{currentSettings.backDelay}"
                    />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3" for="cursor-char">
                    Cursor Character
                </label>
                <div class="col-md-9">
                    <input
                        type="text"
                        class="form-control"
                        id="cursor-char"
                        t-attf-value="#{currentSettings.cursorChar}"
                    />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-md-3" for="cursor-char">
                    Loop?
                </label>
                <div class="col-md-9">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        value=""
                        id="loop"
                        t-att-checked="currentSettings.loop"
                    />
                </div>
            </div>
        </div>
    </t>
</templates>
