<odoo>

    <template
        id="portal_my_home_menu_receipt"
        name="Portal layout : receipt menu entries"
        inherit_id="portal.portal_breadcrumbs"
        priority="40"
    >
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li
                t-if="page_name == 'receipt'"
                t-attf-class="breadcrumb-item #{'active ' if not receipt else ''}"
            >
                <a
                    t-if="receipt"
                    t-attf-href="/my/receipts?{{ keep_query() }}"
                >Receipts</a>
                <t t-else="">Receipts</t>
            </li>
            <li t-if="receipt" class="breadcrumb-item active">
                <t t-esc="receipt.name" t-if="receipt.name != '/'" />
                <t t-else=""><em>Draft Receipt</em></t>
            </li>
        </xpath>
    </template>

    <template
        id="portal_my_home_receipt"
        name="Show Receipts"
        inherit_id="portal.portal_my_home"
        customize_show="True"
        priority="30"
    >
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Receipts</t>
                <t t-set="url" t-value="'/my/receipts'" />
                <t t-set="placeholder_count" t-value="'receipt_count'" />
            </t>
        </xpath>
    </template>

    <template id="portal_my_receipts" name="My Receipts and Payments">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Receipts</t>
            </t>
            <t t-if="not receipts">
                <p>There are currently no receipts and payments for your account.</p>
            </t>
            <t t-if="receipts" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Receipt #</th>
                        <th>Receipt Date</th>
                        <th class='d-none d-md-table-cell'>Due Date</th>
                        <th />
                        <th class="text-right">Amount Due</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="receipts" t-as="receipt">
                        <tr>
                            <td>
                                <a
                                    t-att-href="receipt.get_portal_url()"
                                    t-att-title="receipt.name"
                                >
                                    <t
                                        t-esc="receipt.name"
                                        t-if="receipt.name != '/'"
                                    />
                                    <em t-else="">Draft Receipt</em>
                                </a>
                            </td>
                            <td><span t-field="receipt.invoice_date" /></td>
                            <td class='d-none d-md-table-cell'><span
                                    t-field="receipt.invoice_date_due"
                                /></td>
                            <td class="tx_status">
                                <t
                                    t-if="receipt.state == 'posted' and receipt.payment_state not in ('in_payment', 'paid', 'reversed')"
                                >
                                    <span class="badge badge-pill badge-info"><i
                                            class="fa fa-fw fa-clock-o"
                                            aria-label="Opened"
                                            title="Opened"
                                            role="img"
                                        /><span
                                            class="d-none d-md-inline"
                                        > Waiting for Payment</span></span>
                                </t>
                                <t
                                    t-if="receipt.state == 'posted' and receipt.payment_state in ('paid', 'in_payment')"
                                >
                                    <span class="badge badge-pill badge-success"><i
                                            class="fa fa-fw fa-check"
                                            aria-label="Paid"
                                            title="Paid"
                                            role="img"
                                        /><span
                                            class="d-none d-md-inline"
                                        > Paid</span></span>
                                </t>
                                <t
                                    t-if="receipt.state == 'posted' and receipt.payment_state == 'reversed'"
                                >
                                    <span class="badge badge-pill badge-success"><i
                                            class="fa fa-fw fa-check"
                                            aria-label="Reversed"
                                            title="Reversed"
                                            role="img"
                                        /><span
                                            class="d-none d-md-inline"
                                        > Reversed</span></span>
                                </t>
                                <t t-if="receipt.state == 'cancel'">
                                    <span class="badge badge-pill badge-warning"><i
                                            class="fa fa-fw fa-remove"
                                            aria-label="Cancelled"
                                            title="Cancelled"
                                            role="img"
                                        /><span
                                            class="d-none d-md-inline"
                                        > Cancelled</span></span>
                                </t>
                            </td>
                            <td class="text-right"><span
                                    t-esc="-receipt.amount_residual if receipt.move_type == 'out_refund' else receipt.amount_residual"
                                    t-options='{"widget": "monetary", "display_currency": receipt.currency_id}'
                                /></td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template
        id="portal_receipt_page"
        name="Receipt Portal Template"
        inherit_id="portal.portal_sidebar"
        primary="True"
    >
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t
                t-set="o_portal_fullwidth_alert"
                groups="sales_team.group_sale_salesman,account.group_account_invoice,account.group_account_readonly"
            >
                <t t-call="portal.portal_back_in_edit_mode">
                    <t
                        t-set="backend_url"
                        t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (receipt._name, receipt.id, receipt.env.ref('account.action_move_out_invoice_type').id)"
                    />
                </t>
            </t>

            <div class="row mt16 o_portal_invoice_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'" />
                    <t t-set="title">
                        <h2 class="mb-0">
                            <b
                                t-if="receipt.amount_residual > 0"
                                t-field="receipt.amount_residual"
                            />
                            <b t-else="1" t-field="receipt.amount_total" />
                        </h2>
                        <div
                            class="small"
                            t-if="receipt.payment_state not in ('paid', 'in_payment') and receipt.move_type == 'out_receipt'"
                        ><i class="fa fa-clock-o" /><span
                                class="o_portal_sidebar_timeago ml4"
                                t-att-datetime="receipt.invoice_date_due"
                            /></div>
                    </t>

                    <t t-set="entries">
                        <ul
                            class="list-group list-group-flush flex-wrap flex-row flex-lg-column"
                        >
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group  flex-grow-1 mr-1 mb-1">
                                        <a
                                            class="btn btn-secondary btn-block o_download_btn"
                                            t-att-href="receipt.get_portal_url(report_type='pdf', download=True)"
                                            title="Download"
                                        ><i class="fa fa-download" /> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a
                                            class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                            t-att-href="receipt.get_portal_url(report_type='pdf')"
                                            id="print_receipt_report"
                                            title="Print"
                                            target="_blank"
                                        ><i class="fa fa-print" /> Print</a>
                                    </div>
                                </div>
                            </li>
                            <li
                                t-if="receipt.invoice_user_id"
                                class="list-group-item flex-grow-1"
                            >
                                <div class="small mb-1"><strong class="text-muted">
                                    <t t-if="receipt.move_type == 'out_receipt'">
                                        Salesperson
                                    </t>
                                    <t t-if="receipt.move_type == 'in_receipt'">
                                        Purchase Representative
                                    </t>
                                </strong></div>
                                <div class="row">
                                    <div class="col flex-grow-0 pr-2">
                                        <img
                                            t-if="receipt.invoice_user_id.image_1024"
                                            class="rounded-circle mt-1 o_portal_contact_img"
                                            t-att-src="image_data_uri(receipt.invoice_user_id.image_1024)"
                                            alt="Contact"
                                        />
                                        <img
                                            t-else=""
                                            class="rounded-circle mt-1 o_portal_contact_img"
                                            src="/web/static/src/img/user_menu_avatar.png"
                                            alt="Contact"
                                        />
                                    </div>
                                    <div class="col pl-0">
                                        <span
                                            t-field="receipt.invoice_user_id"
                                            t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'
                                        />
                                        <a href="#discussion" class="small"><i
                                                class="fa fa-fw fa-comments"
                                            /><b>Send message</b></a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page Content -->
                <div id="receipt_content" class="col-12 col-lg">
                    <t t-if="error or warning" t-call="account.portal_invoice_error" />
                    <t
                        t-if="success and (not error and not warning)"
                        t-call="account.portal_invoice_success"
                    />

                    <div class="o_portal_html_view shadow p-3">
                        <div class="o_portal_html_loader text-center">
                            <i
                                class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"
                            />
                        </div>
                        <iframe
                            id="invoice_html"
                            class="mt8 mb8"
                            width="100%"
                            height="100%"
                            frameborder="0"
                            scrolling="no"
                            t-att-src="receipt.get_portal_url(report_type='html')"
                        />
                    </div>
                    <!-- chatter -->
                    <div id="invoice_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="receipt" />
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>


</odoo>
