    <t t-name="website_theme_flexible.TabMenu">
        <div>
            <div class="form-group">
                <label>Company Logo / Website Name Alignment</label>
                <select name="menu_logo" class="form-control">
                    <option value="left_text">Left / Name</option>
                    <option value="right_text">Right / Name</option>
                    <option value="left_logo">Left / Logo</option>
                    <option value="right_logo">Right / Logo</option>
                </select>
            </div>
            <div class="form-group">
                <label>Menu Alignment</label>
                <select name="menu_alignment" class="form-control">
                    <option value="left">Left</option>
                    <option value="center">Center</option>
                    <option value="right">Right</option>
                </select>
            </div>
            <div class="form-group">
                <label>Sticky</label>
                <input name="menu_sticky" type="checkbox" />
            </div>
            <div class="form-group">
                <label>Background Color</label>
                <div class="input-group colorpicker-component">
                    <input name="menu_bg" type="text" class="form-control"/>
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
            <div class="form-group">
                <label>Font Color</label>
                <div class="input-group colorpicker-component">
                    <input name="menu_color" type="text" class="form-control"/>
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
        </div>
    </t>

    <t t-name="website_theme_flexible.TabLayout">
        <div>
            <div class="form-group">
                <label>Layout</label>
                <select name="layout" class="form-control">
                    <option value="full_width">Full Width</option>
                    <option value="boxed">Boxed</option>
                    <option value="postcard">Postcard</option>
                </select>
            </div>
            <div class="form-group">
                <label>Block Corner Radius</label>
                <input name="snippet_border_radius" type="number" class="form-control"/>
            </div>
            <div class="form-group">
                <label>Background Color</label>
                <div class="input-group colorpicker-component">
                    <input name="bg_color" type="text" class="form-control"/>
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
            <div class="form-group">
                <label>Footer Color</label>
                <div class="input-group colorpicker-component">
                    <input name="footer_bg_color" type="text" class="form-control"/>
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
            <div class="form-group">
                <label>Link Color</label>
                <div class="input-group colorpicker-component">
                    <input name="anchor_color" type="text" class="form-control"/>
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
            <div class="form-group">
                <label>Link Color In Footer</label>
                <div class="input-group colorpicker-component">
                    <input name="anchor_footer_color" type="text" class="form-control"/>
                    <span class="input-group-addon"><i></i></span>
                </div>
            </div>
        </div>
    </t>

    <t t-name="website_theme_flexible.SelectGoogleFont">
        <div>
            <div class="form-group">
                <label>Font</label>
                <input type="text" class="form-control" name="font"/>
            </div>
            <div class="form-group">
                <label>Variant</label>
                <select name="variant" class="form-control">
                </select>
            </div>
        </div>
    </t>

    <t t-name="website_theme_flexible.NoGoogleAPIKey">
        <p>
            Please set your Google Fonts API key in the website settings.
            You can get your API key <a target="new" href="https://developers.google.com/fonts/docs/developer_api#APIKey">here</a>.
        </p>
    </t>
