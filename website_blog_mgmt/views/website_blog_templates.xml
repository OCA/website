<?xml version="1.0"?>
<openerp>
  <data>
    <template id="blog_post_short" inherit_id="website_blog.blog_post_short">
      <xpath expr="//span[@t-field='blog_post.create_date']"
             position="replace">
        <span t-field="blog_post.website_publication_date"
              t-field-options='{"format": "MMMM yyyy"}'/>
      </xpath>
    </template>
  </data>
</openerp>