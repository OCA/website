<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='utm_tracker_settings']" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="website_cookie_notice_setting"
                >
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Cookie Notice</span>
                        <span
                            class="fa fa-lg fa-globe"
                            title="Values set here are website-specific."
                            groups="website.group_multi_website"
                        />
                        <div class="text-muted">
                            Cookie notice link to legal page
                        </div>
                        <div class="content-group mt16">
                            <div class="row">
                                <label
                                    class="col-lg-3 o_light_label"
                                    string="Legal Page"
                                    for="cookie_notice_legal_page_id"
                                />
                                <field
                                    name="cookie_notice_legal_page_id"
                                    class="oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
