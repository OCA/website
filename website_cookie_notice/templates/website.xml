<odoo>
    <template
        id="loader"
        inherit_id="website.assets_frontend"
        name="Cookies script loader"
    >
        <xpath expr=".">
            <script
                type="text/javascript"
                src="/website_cookie_notice/static/src/js/accept_cookies.js"
            />
        </xpath>
    </template>
    <template id="message" name="Cookies notice">
        <t t-set="cookie_legal_page" t-value="website.cookie_notice_legal_page_id" />
        <div
            t-if="request and
        not request.session.get('accepted_cookies')"
            id="website_cookie_notice"
            class="container-fluid cc-cookies alert alert-warning"
            role="alert"
        >
            <div class="container">
                <div class="row">
                    <div
                        class="col-sm-10"
                    >We use cookies in this website. Read about them in our <a
                            t-att-href="cookie_legal_page and cookie_legal_page.url or '#'"
                            class="alert-link"
                        >privacy policy</a>. To disable them, configure your
                        browser properly. If you keep using this website, you are accepting those.
                    </div>
                    <div class="col-sm-2 text-center">
                        <a class="btn btn-primary" href="#">OK</a>
                    </div>
                </div>
            </div>
        </div>
    </template>
    <template id="cookiebanner" inherit_id="website.layout">
        <xpath expr="//header" position="before">
            <t t-call="website_cookie_notice.message" />
        </xpath>
    </template>
</odoo>
