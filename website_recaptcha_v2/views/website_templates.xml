<odoo>

    <template id="recaptcha_widget" name="reCAPTCHA widget">
        <t t-if="website.recaptcha_v2_enabled">
            <div
                class="g-recaptcha"
                t-att-data-sitekey="website.recaptcha_v2_site_key"
            />
            <script src="https://www.recaptcha.net/recaptcha/api.js" async="true" />
        </t>
    </template>

</odoo>
