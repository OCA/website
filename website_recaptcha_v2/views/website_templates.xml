<odoo>

    <template id="assets_editor_recaptcha" name="reCAPTCHA" inherit_id="website.layout">
        <xpath expr="//main" position="inside">
            <script src="https://www.google.com/recaptcha/api.js" />
        </xpath>
    </template>

    <template id="recaptcha_widget" name="reCAPTCHA widget">
        <div
            class="g-recaptcha"
            t-if="website.recaptcha_enabled"
            t-att-data-sitekey="website.recaptcha_key_site"
        />
    </template>

</odoo>
