<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <template id="blog_post_filter_selector" inherit_id="website_blog.blog_post_short" active="True">
      <xpath expr="//t[@t-call='website.pager']" position="after">
        <div class="pull-left">


              <label for="blog_posts_selector" class="form-group sort_label">Blog Posts per Page</label>
              <select id="blog_posts_selector" name="blog_posts_selector">
                <option value="5">5</option>
                <option value="10" selected="selected">10</option>
                <option value="20">20</option>
                <option value="30">30</option>
              </select>




              <label for="blog_posts_year_selector" class="form-group sort_label">Year</label>
              <select id="blog_posts_year_selector" name="blog_posts_year_selector">
                <option value="select" selected="selected">Select</option>
                <option value="2010">2010</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
                <option value="2024">2024</option>
                <option value="2025">2025</option>
              </select>




              <label for="blog_filter_selector" class="form-group sort_label">Filter Posts by</label>
              <select id="blog_filter_selector" name="blog_filter_selector">
                <option value="newest" selected="selected">Latest</option>
                <option value="oldest">Oldest</option>
              </select>


        </div>
      </xpath>
    </template>

  </data>
</openerp>
